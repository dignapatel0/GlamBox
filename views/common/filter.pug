div.p-3.my-5.border.border-3
  .row.align-items-end
    .col-11
      form.row.align-items-end(method="post" action="/filter")
        input(type="hidden" name="target_url" value=originUrl)
        
        .col-3
          label.form-label(for="brand") Select brand:
          select.form-select(name="selectedBrand" id="brand" disabled=(originUrl.split('/')[1] == 'brand'))
            option(default disabled hidden selected) Choose brand
            each brand in brandList
              option(value=brand selected=(selectedBrand == brand))= brand

        .col-3
          label.form-label(for="productType") Select product type:
          select.form-select(name="selectedProductType" id="productType" disabled=(originUrl.split('/')[1] == 'productType'))
            option(value="" selected disabled hidden default) Choose product type
            each product in productList
              option(value=product selected=(selectedProductType == product))= product

        .col-3
          label.form-label(for="currency") Select currency:
          select.form-select(id="currency" name="selectedCurrency")
            option(value="" selected disabled hidden default) Choose currency
            option(value="USD" selected=(selectedCurrency === "USD")) USD - United States
            option(value="CAD" selected=(selectedCurrency === "CAD")) CAD - Canada
            option(value="EUR" selected=(selectedCurrency === "EUR")) EUR - Eurozone
            option(value="INR" selected=(selectedCurrency === "INR")) INR - India
            option(value="AUD" selected=(selectedCurrency === "AUD")) AUD - Australia
            option(value="GBP" selected=(selectedCurrency === "GBP")) GBP - United Kingdom
            option(value="JPY" selected=(selectedCurrency === "JPY")) JPY - Japan
            option(value="CNY" selected=(selectedCurrency === "CNY")) CNY - China
            option(value="CHF" selected=(selectedCurrency === "CHF")) CHF - Switzerland
            option(value="MXN" selected=(selectedCurrency === "MXN")) MXN - Mexico

        .col-2
          label.form-label(for="sortby") Sort by price:
          select.form-select(id="sortby" name="selectedSortBy")
            option(value="" default disabled hidden selected) Default
            option(value="low to high" selected=(selectedSortBy == "low to high")) Low to High
            option(value="high to low" selected=(selectedSortBy == "high to low")) High to Low

        .col-1    
          input.btn.btn-default.border(type="submit" value="Submit")

    .col-1
      form(method="post" action="/reset")
        input(type="hidden" name="target_url" value=originUrl)
        input.btn.btn-secondary(type="submit" value="Reset")
